if (<%= !@job_application.id.nil? %>) {
  form = document.querySelector(".filter-select")
  if (form) {
    Rails.fire(form, 'submit')
  } else {
    document.querySelector("[data-application-id='<%= @job_application.id %>']").remove();
    counterElement = document.querySelector(".outstanding-count")
    counter = counterElement.innerText
    intCounter = parseInt(counter, 10)
    intCounter -= 1
    jobsIndex = document.querySelector(".ajax-container")
    counterElement.innerText = intCounter
    <% partial = j render "./jobs/index", jobs: @jobs %>
    jobsIndex.innerHTML = ''
    jobsIndex.insertAdjacentHTML("beforeend", "<%= partial %>")
  }
}


